<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:rim="http://www.blackberry.com/ns/widgets" xml:lang="en"
    id="Geofence" version="0.1.0" rim:userAgent="WebWorks-BB10">

    <name>Geofence</name>

    <description>A geofencing sample using Leaflet maps.</description>

    <author href="https://twitter.com/jim_ing" email="jing@blackberry.com"
        rim:copyright="Copyright Â© 2014">Jim Ing</author>

    <rim:category name="all" />

    <content src="index.html" />

    <icon src="img/icon-86.png" />
    <icon src="img/icon-150.png" />

    <feature id="blackberry.app">
        <param name="orientation" value="auto"></param>
    </feature>

    <rim:permissions>
<!--
        <rim:permit>access_shared</rim:permit>
        <rim:permit>read_device_identifying_information</rim:permit>
-->
        <rim:permit>read_geolocation</rim:permit>
    </rim:permissions>

    <!-- whitelist for img src -->
    <access uri="*" subdomains="true" />

    <!-- whitelist for Ajax requests -->
    <access uri="http://ings.ca" subdomains="true" />

    <feature id="blackberry.app" />
    <feature id="blackberry.event" />
    <feature id="blackberry.invoke" />
    <feature id="blackberry.invoke.card" />
    <feature id="blackberry.identity" />
    <feature id="blackberry.sensors" />
    <feature id="blackberry.system" />

    <feature id="community.preventsleep" />

